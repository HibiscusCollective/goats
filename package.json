{
  "name": "goats-tests",
  "scripts": {
    "commit": "git-cz",
    "fmt": "prettier --write . && standard --fix .",
    "lint": "tsc --noEmit && prettier --check . && eslint .",
    "fix": "tsc --noEmit && prettier --write . && eslint --fix .",
    "test": "bun lint && bun test"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@commitlint/format": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@types/bun": "1.2.4",
    "@typescript-eslint/parser": "^8.24.0",
    "commitizen": "^4.3.1",
    "commitlint": "^19.7.1",
    "eslint": "^9.20.1",
    "eslint-config-love": "^119.0.0",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.5.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0",
    "inquirer": "^9.0.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "prettier": {
    "useTabs": true,
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "endOfLine": "lf",
    "printWidth": 192
  }
}